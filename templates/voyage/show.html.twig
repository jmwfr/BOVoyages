{% extends 'base.html.twig' %}

{% block title %}Voyage{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-8 my-4">
                <div class="card">
                    <div class="card-header text-center">
                    <h1>Voyage</h1>
                </div>

                        <table class="table table-bordered table-striped">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ voyage.id }}</td>
                        </tr>
                        <tr>
                            <th>DestinationVoyage</th>
                            <td>{{ voyage.destinationVoyage }}</td>
                        </tr>
                        <tr>
                            <th>DateAller</th>
                            <td>{{ voyage.dateAller ? voyage.dateAller|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>DateRetour</th>
                            <td>{{ voyage.dateRetour ? voyage.dateRetour|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>NombrePersonnes</th>
                            <td>{{ voyage.nombrePersonnes }}</td>
                        </tr>
                        <tr>
                            <th>PrixVoyage</th>
                            <td>{{ voyage.prixVoyage }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div>
                        <div class="card-footer text-center">
                            <a class="btn btn-secondary btn-custom" href="{{ path('voyage_index') }}">Retour</a>
                            <a class="btn btn-secondary btn-custom" href="{{ path('voyage_edit', {'id': voyage.id}) }}">Modifier</a>
                            {{ include('voyage/_delete_form.html.twig') }}
                        </div>
                    </div>




                </div>
            </div>

        </div>

    </div>




{% endblock %}
