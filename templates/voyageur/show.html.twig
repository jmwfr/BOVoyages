{% extends 'base.html.twig' %}

{% block title %}Voyageur{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col my-5">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>Voyageur</h1>

                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ voyageur.id }}</td>
                            </tr>
                            <tr>
                                <th>NomVoyageur</th>
                                <td>{{ voyageur.nomVoyageur }}</td>
                            </tr>
                            <tr>
                                <th>PrenomVoyageur</th>
                                <td>{{ voyageur.prenomVoyageur }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <div>
                            <div class="card-footer text-center">
                                <a class="btn btn-secondary btn-custom" href="{{ path('voyageur_index') }}">Retour</a>
                                <a class="btn btn-secondary btn-custom" href="{{ path('voyageur_edit', {'id': voyageur.id}) }}">Modifier</a>
                                {{ include('voyageur/_delete_form.html.twig') }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
