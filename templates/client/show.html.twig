{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col my-5">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>Client</h1>

                        <table class="table table-bordered table-striped">

                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ client.id }}</td>
                            </tr>
                            <tr>
                                <th>NomClient</th>
                                <td>{{ client.nomClient }}</td>
                            </tr>
                            <tr>
                                <th>PrenomClient</th>
                                <td>{{ client.prenomClient }}</td>
                            </tr>
                            <tr>
                                <th>TelClient</th>
                                <td>{{ client.telClient }}</td>
                            </tr>
                            <tr>
                                <th>EmailClient</th>
                                <td>{{ client.emailClient }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <div>
                        <div class="card-footer text-center">
                            <a class="btn btn-secondary btn-custom" href="{{ path('client_index') }}">Retour</a>
                            <a class="btn btn-secondary btn-custom" href="{{ path('client_edit', {'id': client.id}) }}">Modifier</a>
                            {{ include('client/_delete_form.html.twig') }}
                        </div>
                        </div>




                    </div>

                </div>
            </div>

        </div>
    </div>


{% endblock %}
