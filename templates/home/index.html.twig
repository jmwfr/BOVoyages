{% extends 'base.html.twig' %}

{% block title %}BOVoyages | Bienvenue{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mt-4">
            <div class="jumbotron mx-3 mb-3 w-100"></div>
            <div class="justify-content-center text-center w-100">
                <h1> Par ici les bons plans ! </h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for voyage in voyages %}
                <div class="col-md-4 text-center my-3">
                    <div class="card shadow h-100">
                        <div class="card-body d-flex flex-column align-items-stretch">
                            <div><h2>{{ voyage.destinationCountry }}</h2></div>
                            <div><img src="img/voyage/{{ voyage.image }}" class="my-2"/></div>
                            <div><h4>{{ voyage.destinationCity }}</h4></div>
                            <div><p>{{ voyage.description }}</p></div>
                            <div class="flex-grow-1 d-flex flex-row align-items-end justify-content-center"><a class="btn btn-secondary position-relative" href="{{ path('voyage_showClient', { id: voyage.id }) }}"
                                  role="button">Voir details &raquo;</a></div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}